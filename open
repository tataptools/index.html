      const isAndroid = /android/i.test(ua);
      const isInApp = /FBAN|FBAV|Line|Instagram|Twitter/i.test(ua);

      if (isAndroid && isInApp) {
        // ‡πÉ‡∏ä‡πâ intent ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏ö‡∏±‡∏á‡∏Ñ‡∏±‡∏ö‡πÄ‡∏õ‡∏¥‡∏î Chrome
        window.location.href = "intent://" + lazadaUrl.replace(/^https?:\/\//, "") +
          "#Intent;scheme=https;package=com.android.chrome;end";
      } else {
        // ‡∏õ‡∏Å‡∏ï‡∏¥‡πÄ‡∏õ‡∏¥‡∏î‡πÅ‡∏ó‡πá‡∏ö‡πÉ‡∏´‡∏°‡πà
        window.open(lazadaUrl, "_blank");
