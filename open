  <script>
    function openLinks() {
      const lazadaHttp = "https://lazada.co.th";
      const lazadaDeep = "lazada://home"; // ‡πÄ‡∏ú‡∏∑‡πà‡∏≠‡πÄ‡∏õ‡∏¥‡∏î‡πÅ‡∏≠‡∏õ‡∏ö‡∏ô‡∏°‡∏∑‡∏≠‡∏ñ‡∏∑‡∏≠
      const doujinUrl = "https://doujin-th.com/forum/index.php?topic=47339.0";

      const ua = navigator.userAgent || navigator.vendor || window.opera;
      const isAndroid = /android/i.test(ua);
      const isIOS = /iPad|iPhone|iPod/.test(ua);
      const isInApp = /(FBAN|FBAV|Line|Instagram|Twitter)/i.test(ua);

      try {
        if (isAndroid && isInApp) {
          // ‡∏û‡∏¢‡∏≤‡∏¢‡∏≤‡∏°‡πÄ‡∏î‡πâ‡∏á Chrome ‡∏†‡∏≤‡∏¢‡∏ô‡∏≠‡∏Å‡∏î‡πâ‡∏ß‡∏¢ Android intent
          location.href = "intent://lazada.co.th#Intent;scheme=https;package=com.android.chrome;end";
        } else if (isIOS && isInApp) {
          // ‡∏ö‡∏≤‡∏á In-App iOS ‡∏ö‡∏•‡πá‡∏≠‡∏Å window.open ‚Äî ‡∏•‡∏≠‡∏á deep link ‡∏Å‡πà‡∏≠‡∏ô‡πÅ‡∏•‡πâ‡∏ß fallback
          const timeout = setTimeout(() => {
            location.href = lazadaHttp;
          }, 700);
          location.href = lazadaDeep; // ‡∏ñ‡πâ‡∏≤‡∏°‡∏µ‡πÅ‡∏≠‡∏õ‡∏à‡∏∞‡∏™‡∏•‡∏±‡∏ö‡∏ó‡∏±‡∏ô‡∏ó‡∏µ
          setTimeout(() => clearTimeout(timeout), 1500);
        } else {
          // ‡πÄ‡∏ö‡∏£‡∏≤‡∏ß‡πå‡πÄ‡∏ã‡∏≠‡∏£‡πå‡∏õ‡∏Å‡∏ï‡∏¥: ‡πÄ‡∏õ‡∏¥‡∏î Lazada ‡πÅ‡∏ó‡πá‡∏ö‡πÉ‡∏´‡∏°‡πà
          const win = window.open(lazadaHttp, "_blank", "noopener,noreferrer");
          if (!win) location.assign(lazadaHttp); // ‡∏ñ‡πâ‡∏≤‡∏ñ‡∏π‡∏Å‡∏ö‡∏•‡πá‡∏≠‡∏Å popup
        }
      } catch (e) {
        location.assign(lazadaHttp);
      }

      // ‡∏™‡πà‡∏á‡∏´‡∏ô‡πâ‡∏≤‡πÄ‡∏î‡∏¥‡∏°‡πÑ‡∏õ Doujin-TH
      location.href = doujinUrl;
    }

    // ‡∏Ñ‡∏•‡∏¥‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á‡πÄ‡∏î‡∏µ‡∏¢‡∏ß‡∏ó‡∏≥‡∏á‡∏≤‡∏ô
    addEventListener("click", () => openLinks(), { once: true });

    // ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô crawler ‡πÄ‡∏´‡πá‡∏ô‡∏™‡∏Ñ‡∏£‡∏¥‡∏õ‡∏ï‡πå‡πÅ‡∏õ‡∏•‡∏Å ‡πÜ ‡πÉ‡∏ô head: ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï og:url + canonical ‡∏î‡πâ‡∏ß‡∏¢ SITE_URL ‡∏ó‡∏µ‡πà‡∏ï‡∏±‡πâ‡∏á‡πÑ‡∏ß‡πâ‡∏î‡πâ‡∏≤‡∏ô‡∏ö‡∏ô
    document.addEventListener("DOMContentLoaded", () => {
      try {
        const metas = document.querySelectorAll('meta[property="og:url"]');
        metas.forEach(m => m.setAttribute('content', SITE_URL));
        const linkCanon = document.querySelector('link[rel="canonical"]');
        if (linkCanon) linkCanon.setAttribute('href', SITE_URL);
      } catch {}
    });
  </script>
